@model IEnumerable<SmartDevices.Models.Car>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fluidLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tirePressure)
        </th>
